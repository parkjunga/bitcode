<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.bitcode.repository.mapper.UserMapper">

    <resultMap id="userMap" type="user">
    	<result column = "id" property = "id" />
        <result column = "name" property = "name" />
        <result column = "nick_name" property = "nickName" />
        <result column = "password" property = "password" />
        <result column = "pattern_pass" property = "patternPass" />
        <result column = "birthday" property = "birthday" />
        <result column = "email" property = "email" />
        <result column = "point" property = "point" />
        <result column = "auth" property = "auth" />
    </resultMap>
    
    <select id="selectbyIdEmail" parameterType="user" resultMap="userMap">
    	select *
    	  from tb_user
    	 where id = #{id} and
    	 	   email = #{email} 
    </select>	
    	
    <select id="selectAllUser" resultMap="userMap">
    	select *
    	  from tb_user
    </select>	
	
    <select id="selectUserById" parameterType="string" resultMap="userMap">
    	select *
    	  from tb_user
    	 where id = #{id}
    </select>	
	
	<select id="selectUserByNameEmail" parameterType="user" resultMap="userMap">
    	select *
    	  from tb_user
    	 where name = #{name} and
    	 	   email = #{email}		
	</select>
	
	<insert id="insertUser"  parameterType="user">
	insert into tb_user(
		id, 
		name, 
		nick_name, 
		password, 
		birthday,
		email
	) values (
        #{id}, 
        #{name}, 
        #{nickName}, 
        #{password}, 
        #{birthday},
        #{email}
		)
	</insert>
<!--     유저 정보 수정 -->
    <update id="updateUser" parameterType="user">
        update tb_user
           set name = #{name},
               nick_name = #{nickName},
               birthday = #{birthday},
               email = #{email}
         where id = #{id}  
    </update>
    
    
    <update id="updateNick" parameterType="user">
        update tb_user
           set nick_name = #{nickName}
         where id = #{id}  
    </update>    
    
     <update id="updateEmail" parameterType="user">
        update tb_user
           set email = #{email}
         where id = #{id}  
    </update>     
    <update id="updateUserPass" parameterType="user">
        update tb_user
           set password = #{password}
         where id = #{id}  
    </update>    
      
    
</mapper>